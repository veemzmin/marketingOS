// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ============================================================================
// MULTI-TENANT MODELS
// ============================================================================

/// Organization - Top-level tenant entity
/// Each organization represents an isolated customer/company
model Organization {
  id        String   @id @default(cuid())
  slug      String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  userOrganizations UserOrganization[]
  auditLogs         AuditLog[]
  content           Content[]

  @@map("organizations")
}

/// User - Authentication and identity
/// Users can belong to multiple organizations with different roles
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  emailVerified DateTime?
  passwordHash  String
  totpEnabled   Boolean   @default(false)
  totpSecret    String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relationships
  userOrganizations       UserOrganization[]
  emailVerificationTokens EmailVerificationToken[]
  totpSetups              TotpSetup[]
  auditLogs               AuditLog[]
  contentCreated          Content[]        @relation("ContentCreator")
  contentVersions         ContentVersion[] @relation("VersionCreator")
  reviewDecisions         ReviewDecision[] @relation("Reviewer")

  @@map("users")
}

/// UserOrganization - Join table with role assignment
/// Implements many-to-many relationship between users and organizations
model UserOrganization {
  id             String   @id @default(cuid())
  userId         String
  organizationId String
  role           Role     @default(VIEWER)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relationships
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
  @@index([organizationId])
  @@index([userId])
  @@map("user_organizations")
}

/// Role - User permission levels within an organization
enum Role {
  ADMIN // Full access to organization settings and content
  REVIEWER // Can review and approve content
  CREATOR // Can create and submit content for review
  VIEWER // Read-only access to content
}

/// ContentStatus - Content workflow states
enum ContentStatus {
  DRAFT // Initial state, content being created
  SUBMITTED // Submitted for review
  IN_REVIEW // Under review by reviewer
  APPROVED // Approved by reviewer
  REJECTED // Rejected by reviewer
}

/// EmailVerificationToken - Time-limited tokens for email verification
/// Used during user registration and email change flows
model EmailVerificationToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  // Relationships
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@map("email_verification_tokens")
}

/// TotpSetup - Temporary storage for TOTP setup process
/// Stores unconfirmed TOTP secrets during 2FA enrollment
model TotpSetup {
  id        String   @id @default(cuid())
  userId    String
  secret    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  // Relationships
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@map("totp_setups")
}

/// AuditLog - Immutable audit trail for compliance
/// Tracks all actions within organizations for regulatory compliance
/// Protected by append-only RLS policy (no UPDATE/DELETE)
model AuditLog {
  id             String   @id @default(cuid())
  organizationId String
  userId         String?
  action         String // e.g., "create", "update", "delete", "approve", "reject"
  resource       String // e.g., "campaign", "content", "user", "organization"
  resourceId     String? // ID of the affected resource
  changes        Json? // Before/after diff for updates
  metadata       Json? // Additional context (IP, user agent, etc.)
  createdAt      DateTime @default(now())

  // Relationships
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User?        @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([organizationId])
  @@index([userId])
  @@index([resource, resourceId])
  @@index([createdAt])
  @@map("audit_logs")
}

// ============================================================================
// CONTENT CREATION MODELS
// ============================================================================

/// Content - Main content entity with status workflow
/// Each content item represents a piece of marketing content in the system
model Content {
  id               String        @id @default(cuid())
  organizationId   String
  title            String
  status           ContentStatus @default(DRAFT)
  complianceScore  Int? // Latest compliance score from governance engine
  createdByUserId  String
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  // Relationships
  organization   Organization    @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdBy      User            @relation("ContentCreator", fields: [createdByUserId], references: [id], onDelete: Cascade)
  versions       ContentVersion[]
  reviewDecision ReviewDecision?

  @@index([organizationId])
  @@index([status])
  @@index([createdByUserId])
  @@map("content")
}

/// ContentVersion - Immutable version history for audit trail
/// Every content change creates a new version record
model ContentVersion {
  id              String   @id @default(cuid())
  contentId       String
  versionNumber   Int
  title           String
  body            String   @db.Text
  topic           String // mental-health, substance-use, wellness, crisis
  audience        String // patients, families, professionals, general
  tone            String // informative, supportive, clinical, motivational
  complianceScore Int // Score at time of version creation
  createdByUserId String
  createdAt       DateTime @default(now())

  // Relationships
  content   Content @relation(fields: [contentId], references: [id], onDelete: Cascade)
  createdBy User    @relation("VersionCreator", fields: [createdByUserId], references: [id], onDelete: Cascade)

  @@unique([contentId, versionNumber])
  @@index([contentId])
  @@index([createdByUserId])
  @@map("content_versions")
}

/// ReviewDecision - Review outcome for content approval workflow
/// Stores reviewer decisions with optional rejection reasons
model ReviewDecision {
  id               String   @id @default(cuid())
  contentId        String   @unique
  decision         String // APPROVED or REJECTED
  reviewedByUserId String
  reason           String? // Optional rejection reason
  createdAt        DateTime @default(now())

  // Relationships
  content    Content @relation(fields: [contentId], references: [id], onDelete: Cascade)
  reviewedBy User    @relation("Reviewer", fields: [reviewedByUserId], references: [id], onDelete: Cascade)

  @@index([contentId])
  @@index([reviewedByUserId])
  @@map("review_decisions")
}

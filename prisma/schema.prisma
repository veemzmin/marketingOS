// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// MULTI-TENANT MODELS
// ============================================================================

/// Organization - Top-level tenant entity
/// Each organization represents an isolated customer/company
model Organization {
  id        String   @id @default(cuid())
  slug      String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  userOrganizations UserOrganization[]
  auditLogs         AuditLog[]
  clients           Client[]
  content           Content[]
  generationJobs    GenerationJob[]
  knowledgeEntries  KnowledgeEntry[]
  assets            Asset[]
  researchProjects  ResearchProject[]

  @@map("organizations")
}

/// User - Authentication and identity
/// Users can belong to multiple organizations with different roles
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  emailVerified DateTime?
  passwordHash  String
  totpEnabled   Boolean   @default(false)
  totpSecret    String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relationships
  userOrganizations       UserOrganization[]
  emailVerificationTokens EmailVerificationToken[]
  totpSetups              TotpSetup[]
  auditLogs               AuditLog[]
  contentCreated          Content[]           @relation("ContentCreator")
  contentVersions         ContentVersion[]    @relation("VersionCreator")
  reviewDecisions         ReviewDecision[]    @relation("Reviewer")
  reviewAssignments       ReviewAssignment[]  @relation("ReviewAssignments")
  reviewerTypes           UserReviewerType[]
  contentVersionsSubmitted ContentVersion[]   @relation("VersionSubmitter")
  researchProjectsCreated ResearchProject[]   @relation("ResearchProjectCreator")

  @@map("users")
}

/// UserOrganization - Join table with role assignment
/// Implements many-to-many relationship between users and organizations
model UserOrganization {
  id             String   @id @default(cuid())
  userId         String
  organizationId String
  role           Role     @default(VIEWER)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relationships
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
  @@index([organizationId])
  @@index([userId])
  @@map("user_organizations")
}

/// Role - User permission levels within an organization
enum Role {
  ADMIN // Full access to organization settings and content
  REVIEWER // Can review and approve content
  CREATOR // Can create and submit content for review
  VIEWER // Read-only access to content
}

/// ReviewerType - Types of reviewers for multi-reviewer workflow
enum ReviewerType {
  CLINICAL // Reviews for medical accuracy and safety
  MARKETING // Reviews for brand alignment and messaging
}

/// GenerationJobType - Types of AI generation jobs
enum GenerationJobType {
  TEXT_BLOG // Blog post generation
  TEXT_SOCIAL // Social media post generation
  IMAGE // Image generation
  VIDEO // Video generation
}

/// GenerationJobStatus - Status of generation jobs
enum GenerationJobStatus {
  PENDING // Created, not yet sent to n8n
  DISPATCHED // Sent to n8n, awaiting callback
  PROCESSING // n8n confirmed processing
  COMPLETED // Result received
  FAILED // Error occurred
}

/// ResearchRunStatus - Status of research runs
enum ResearchRunStatus {
  PENDING // Awaiting clarifying inputs
  RUNNING // Generating outputs
  COMPLETED // Outputs available
  FAILED // Error occurred
}

/// ResearchOutputType - Types of research deliverables
enum ResearchOutputType {
  EXEC_SUMMARY
  FULL_REPORT
  SLIDE_OUTLINE
  DATA_APPENDIX
  ACTION_PLAN
  IDEAS
}

/// CampaignStatus - Lifecycle for marketing campaigns
enum CampaignStatus {
  DRAFT
  ACTIVE
  PAUSED
  COMPLETED
  ARCHIVED
}

/// ContentStatus - Content workflow states
enum ContentStatus {
  DRAFT // Initial state, content being created
  SUBMITTED // Submitted for review
  IN_REVIEW // Under review by reviewer
  APPROVED // Approved by reviewer
  REJECTED // Rejected by reviewer
}

/// EmailVerificationToken - Time-limited tokens for email verification
/// Used during user registration and email change flows
model EmailVerificationToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  // Relationships
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@map("email_verification_tokens")
}

/// TotpSetup - Temporary storage for TOTP setup process
/// Stores unconfirmed TOTP secrets during 2FA enrollment
model TotpSetup {
  id        String   @id @default(cuid())
  userId    String
  secret    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  // Relationships
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@map("totp_setups")
}

/// AuditLog - Immutable audit trail for compliance
/// Tracks all actions within organizations for regulatory compliance
/// Protected by append-only RLS policy (no UPDATE/DELETE)
model AuditLog {
  id             String   @id @default(cuid())
  organizationId String
  userId         String?
  action         String // e.g., "create", "update", "delete", "approve", "reject"
  resource       String // e.g., "campaign", "content", "user", "organization"
  resourceId     String? // ID of the affected resource
  changes        Json? // Before/after diff for updates
  metadata       Json? // Additional context (IP, user agent, etc.)
  createdAt      DateTime @default(now())

  // Relationships
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User?        @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([organizationId])
  @@index([userId])
  @@index([resource, resourceId])
  @@index([createdAt])
  @@map("audit_logs")
}

// ============================================================================
// CLIENT + GOVERNANCE HIERARCHY MODELS
// ============================================================================

/// Client - Brand/account within an organization
model Client {
  id               String   @id @default(cuid())
  organizationId   String
  slug             String
  name             String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relationships
  organization       Organization       @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  truthPack          TruthPack?
  governanceProfiles GovernanceProfile[]
  campaigns          Campaign[]
  content            Content[]

  @@unique([organizationId, slug])
  @@index([organizationId])
  @@map("clients")
}

/// TruthPack - Source of truth for a client (brand, voice, compliance rules)
model TruthPack {
  id        String   @id @default(cuid())
  clientId  String   @unique
  version   Int      @default(1)
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  client Client @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@index([clientId])
  @@map("truth_packs")
}

/// GovernanceProfile - Reusable policy ruleset for a client
model GovernanceProfile {
  id          String   @id @default(cuid())
  clientId    String
  name        String
  description String?
  isActive    Boolean  @default(true)
  config      Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relationships
  client    Client     @relation(fields: [clientId], references: [id], onDelete: Cascade)
  campaigns Campaign[]

  @@index([clientId])
  @@map("governance_profiles")
}

/// Campaign - Time-bound initiative inheriting governance profile
model Campaign {
  id                  String         @id @default(cuid())
  clientId            String
  governanceProfileId String
  name                String
  status              CampaignStatus @default(DRAFT)
  config              Json
  startsAt            DateTime?
  endsAt              DateTime?
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt

  // Relationships
  client            Client            @relation(fields: [clientId], references: [id], onDelete: Cascade)
  governanceProfile GovernanceProfile @relation(fields: [governanceProfileId], references: [id], onDelete: Restrict)
  content           Content[]

  @@index([clientId])
  @@index([governanceProfileId])
  @@map("campaigns")
}

// ============================================================================
// CONTENT CREATION MODELS
// ============================================================================

/// Content - Main content entity with status workflow
/// Each content item represents a piece of marketing content in the system
model Content {
  id               String        @id @default(cuid())
  organizationId   String
  clientId         String?
  campaignId       String?
  title            String
  status           ContentStatus @default(DRAFT)
  complianceScore  Int? // Latest compliance score from governance engine
  createdByUserId  String
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  // Relationships
  organization      Organization       @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  client            Client?             @relation(fields: [clientId], references: [id], onDelete: SetNull)
  campaign          Campaign?           @relation(fields: [campaignId], references: [id], onDelete: SetNull)
  createdBy         User               @relation("ContentCreator", fields: [createdByUserId], references: [id], onDelete: Cascade)
  versions          ContentVersion[]
  reviewAssignments ReviewAssignment[]
  reviewDecisions   ReviewDecision[]
  generationJobs    GenerationJob[]
  blogMetadata      BlogMetadata?
  socialMetadata    SocialMetadata?
  assets            Asset[]

  @@index([organizationId])
  @@index([clientId])
  @@index([campaignId])
  @@index([status])
  @@index([createdByUserId])
  @@map("content")
}

/// ContentVersion - Immutable version history for audit trail
/// Every content change creates a new version record
model ContentVersion {
  id              String   @id @default(cuid())
  contentId       String
  versionNumber   Int
  title           String
  body            String   @db.Text
  topic           String // mental-health, substance-use, wellness, crisis
  audience        String // patients, families, professionals, general
  tone            String // informative, supportive, clinical, motivational
  complianceScore Int // Score at time of version creation
  governanceViolations Json? // Stored violations for audit/review
  submittedByUserId String?
  submittedAt       DateTime?
  submittedFromStatus ContentStatus?
  createdByUserId String
  createdAt       DateTime @default(now())

  // Relationships
  content   Content @relation(fields: [contentId], references: [id], onDelete: Cascade)
  createdBy User    @relation("VersionCreator", fields: [createdByUserId], references: [id], onDelete: Cascade)
  submittedBy User? @relation("VersionSubmitter", fields: [submittedByUserId], references: [id], onDelete: SetNull)
  reviewAssignments ReviewAssignment[]

  @@unique([contentId, versionNumber])
  @@index([contentId])
  @@index([createdByUserId])
  @@index([submittedByUserId])
  @@map("content_versions")
}

/// ReviewDecision - Review outcome for content approval workflow
/// Stores reviewer decisions with optional comments
/// Supports multi-reviewer workflow with different reviewer types
model ReviewDecision {
  id               String       @id @default(cuid())
  contentId        String
  reviewerType     ReviewerType
  decision         String // APPROVED, REJECTED, CHANGES_REQUESTED
  reviewedByUserId String
  comment          String?      @db.Text
  createdAt        DateTime     @default(now())

  // Relationships
  content    Content @relation(fields: [contentId], references: [id], onDelete: Cascade)
  reviewedBy User    @relation("Reviewer", fields: [reviewedByUserId], references: [id], onDelete: Cascade)

  @@unique([contentId, reviewerType]) // One decision per type per content
  @@index([contentId])
  @@index([reviewedByUserId])
  @@map("review_decisions")
}

/// ReviewAssignment - Tracks review assignments for multi-reviewer workflow
/// Each content item can have multiple assignments (one per required reviewer type)
/// Assignments can be claimed by any reviewer of the appropriate type
model ReviewAssignment {
  id             String       @id @default(cuid())
  contentId      String
  contentVersionId String
  reviewerType   ReviewerType
  assignedUserId String? // Null = any reviewer of this type can claim
  status         String       @default("PENDING") // PENDING, IN_PROGRESS, COMPLETED
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  // Relationships
  content      Content @relation(fields: [contentId], references: [id], onDelete: Cascade)
  contentVersion ContentVersion @relation(fields: [contentVersionId], references: [id], onDelete: Cascade)
  assignedUser User?   @relation("ReviewAssignments", fields: [assignedUserId], references: [id])

  @@unique([contentId, reviewerType, contentVersionId])
  @@index([contentId])
  @@index([contentVersionId])
  @@index([assignedUserId])
  @@index([status])
  @@map("review_assignments")
}

/// UserReviewerType - Maps users to reviewer types they can perform
/// Allows users to be designated as clinical reviewers, marketing reviewers, or both
model UserReviewerType {
  id             String       @id @default(cuid())
  userId         String
  organizationId String
  reviewerType   ReviewerType
  createdAt      DateTime     @default(now())

  // Relationships
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId, reviewerType])
  @@index([organizationId, reviewerType])
  @@map("user_reviewer_types")
}

// ============================================================================
// AI GENERATION MODELS
// ============================================================================

/// GenerationJob - AI generation job tracking for n8n integration
/// Tracks text, image, and video generation requests through n8n
model GenerationJob {
  id             String              @id @default(cuid())
  organizationId String
  contentId      String? // Null for standalone generations
  jobType        GenerationJobType
  status         GenerationJobStatus @default(PENDING)
  prompt         String              @db.Text
  parameters     Json // Platform, style, etc.
  result         Json? // Generated content/URLs
  error          String?
  n8nExecutionId String? // For tracking in n8n
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
  completedAt    DateTime?

  // Relationships
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  content      Content?     @relation(fields: [contentId], references: [id], onDelete: SetNull)

  @@index([organizationId])
  @@index([contentId])
  @@index([status])
  @@index([n8nExecutionId])
  @@map("generation_jobs")
}

/// KnowledgeEntry - Verified health information for RAG
/// Stores curated facts that AI can reference during generation
model KnowledgeEntry {
  id             String   @id @default(cuid())
  organizationId String
  category       String // condition, treatment, statistic, etc.
  claim          String   @db.Text
  source         String
  lastVerified   DateTime
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relationships
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId, category])
  @@map("knowledge_entries")
}

/// BlogMetadata - SEO and blog-specific metadata
model BlogMetadata {
  id                 String   @id @default(cuid())
  contentId          String   @unique
  metaDescription    String?
  primaryKeyword     String?
  secondaryKeywords  String[] // PostgreSQL array
  seoScore           Int?
  readabilityScore   Int?
  wordCount          Int?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  // Relationships
  content Content @relation(fields: [contentId], references: [id], onDelete: Cascade)

  @@map("blog_metadata")
}

/// SocialMetadata - Social media platform-specific metadata
model SocialMetadata {
  id               String   @id @default(cuid())
  contentId        String   @unique
  platform         String // instagram, facebook, linkedin, twitter
  hashtags         String[] // PostgreSQL array
  suggestedTime    Json? // { day, time, timezone }
  characterCount   Int?
  engagementScore  Int? // Predicted engagement (future feature)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relationships
  content Content @relation(fields: [contentId], references: [id], onDelete: Cascade)

  @@map("social_metadata")
}

/// Asset - Generated or uploaded media assets (images, videos)
model Asset {
  id             String   @id @default(cuid())
  organizationId String
  contentId      String?
  type           String // image, video, audio
  url            String
  thumbnailUrl   String?
  metadata       Json // width, height, duration, format, size, etc.
  createdAt      DateTime @default(now())

  // Relationships
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  content      Content?     @relation(fields: [contentId], references: [id], onDelete: SetNull)

  @@index([organizationId])
  @@index([contentId])
  @@index([type])
  @@map("assets")
}

// ============================================================================
// RESEARCH COMMAND CENTER MODELS
// ============================================================================

/// ResearchProject - Long-lived research workspace for an industry/initiative
model ResearchProject {
  id              String   @id @default(cuid())
  organizationId  String
  title           String
  industry        String
  description     String?
  createdByUserId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relationships
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdBy    User?        @relation("ResearchProjectCreator", fields: [createdByUserId], references: [id], onDelete: SetNull)
  runs         ResearchRun[]

  @@index([organizationId])
  @@index([createdByUserId])
  @@map("research_projects")
}

/// ResearchRun - A single research request + outputs
model ResearchRun {
  id          String            @id @default(cuid())
  projectId   String
  prompt      String            @db.Text
  status      ResearchRunStatus @default(PENDING)
  questions   Json?
  answers     Json?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  completedAt DateTime?

  // Relationships
  project  ResearchProject  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  outputs  ResearchOutput[]
  sources  ResearchSource[]

  @@index([projectId])
  @@index([status])
  @@map("research_runs")
}

/// ResearchSource - Citations used in research outputs
model ResearchSource {
  id         String   @id @default(cuid())
  runId      String
  title      String
  url        String?
  publisher  String?
  sourceType String
  summary    String?  @db.Text
  createdAt  DateTime @default(now())

  // Relationships
  run ResearchRun @relation(fields: [runId], references: [id], onDelete: Cascade)

  @@index([runId])
  @@map("research_sources")
}

/// ResearchOutput - Persisted research deliverables
model ResearchOutput {
  id         String             @id @default(cuid())
  runId      String
  outputType ResearchOutputType
  content    String             @db.Text
  createdAt  DateTime           @default(now())

  // Relationships
  run ResearchRun @relation(fields: [runId], references: [id], onDelete: Cascade)

  @@index([runId])
  @@index([outputType])
  @@map("research_outputs")
}
